{
    "compilerOptions": {
        "lib": ["DOM", "ESNext"],
        "jsx": "react-jsx",
        "target": "ESNext",
        "noEmit": true,
        "skipLibCheck": true,
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleDetection": "force",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "allowImportingTsExtensions": true,
        "noUncheckedSideEffectImports": true,
        "strict": true
    },
    "include": ["src"]
}
